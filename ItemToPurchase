public class ItemToPurchase
{
    // required private strings
    private String itemName;
    private int itemPrice;
    private int itemQuantity;

    //initializes these variables to "nothing"
    public ItemToPurchase()
    {
        itemName     = "none";
        itemPrice    = 0;
        itemQuantity = 0;
    }

      //the rest are pretty self explanatory 
    public void setName(String nameOfItem)
    {
        itemName = nameOfItem;
    }

    public String getName()
    {
        return itemName;
    }

    public void setPrice(int priceOfItem)
    {
        itemPrice = priceOfItem;
    }

    public int getPrice()
    {
        return itemPrice;
    }

    public void setQuantity(int quantityOfItem)
    {
        itemQuantity = quantityOfItem;
    }

    public int getQuantity()
    {
        return itemQuantity;
    }
}
